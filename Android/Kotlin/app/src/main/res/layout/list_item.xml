<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_rank"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="1"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="BTC"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/txt_rank"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitcoin"
        app:layout_constraintStart_toStartOf="@+id/txt_symbol"
        app:layout_constraintTop_toBottomOf="@+id/txt_symbol" />

    <TextView
        android:id="@+id/lbl_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD :"
        app:layout_constraintStart_toStartOf="@+id/lbl_btc"
        app:layout_constraintTop_toBottomOf="@+id/lbl_btc" />

    <TextView
        android:id="@+id/lbl_btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="BTC :"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/txt_symbol" />

    <TextView
        android:id="@+id/txt_btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="111"
        app:layout_constraintStart_toEndOf="@+id/lbl_btc"
        app:layout_constraintTop_toTopOf="@+id/lbl_btc" />

    <TextView
        android:id="@+id/txt_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="222"
        app:layout_constraintStart_toStartOf="@+id/txt_btc"
        app:layout_constraintTop_toBottomOf="@+id/txt_btc" />
</android.support.constraint.ConstraintLayout>